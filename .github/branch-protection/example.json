{
  "name": "example-branch",
  "description": "Example branch protection rule with detailed documentation",
  "target": "branch",
  "enforcement": "active",
  
  "conditions": {
    "ref_name": {
      "include": [
        "refs/heads/example"
      ],
      "exclude": []
    }
  },
  
  "rules": [
    {
      "type": "deletion",
      "description": "Prevent accidental deletion of the branch"
    },
    {
      "type": "non_fast_forward",
      "description": "Prevent force pushes (git push --force) to maintain history"
    },
    {
      "type": "creation",
      "description": "Prevent direct branch creation from this branch"
    },
    {
      "type": "pull_request",
      "description": "Require pull requests for all changes",
      "parameters": {
        "required_approving_review_count": 0,
        "dismiss_stale_reviews_on_push": false,
        "require_code_owner_review": false,
        "require_last_push_approval": false,
        "required_review_thread_resolution": false,
        "allowed_merge_methods": [
          "merge",
          "squash",
          "rebase"
        ]
      }
    },
    {
      "type": "required_status_checks",
      "description": "All CI/CD checks must pass before merge",
      "parameters": {
        "strict_required_status_checks_policy": false,
        "do_not_enforce_on_create": false,
        "required_status_checks": [
          {
            "context": "Branch Validation / check-source-branch-example",
            "integration_id": 15368
          },
          {
            "context": "CI / lint",
            "integration_id": 15368
          },
          {
            "context": "CI / type-check",
            "integration_id": 15368
          },
          {
            "context": "CI / test",
            "integration_id": 15368
          },
          {
            "context": "CI / build",
            "integration_id": 15368
          }
        ]
      }
    }
  ],
  
  "bypass_actors": []
}
